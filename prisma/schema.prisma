generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model card {
  id                 BigInt               @id @default(autoincrement())
  type               String?              @db.VarChar
  name               String?              @db.VarChar
  img_url            String?
  card_description   card_description[]
  card_num_by_player card_num_by_player[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model card_description {
  id          BigInt  @id @default(autoincrement())
  description String?
  card_id     BigInt?
  card        card?   @relation(fields: [card_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model card_num_by_player {
  id            BigInt         @id @default(autoincrement())
  card_id       BigInt?
  player_num_id BigInt?
  quantity      BigInt?
  card          card?          @relation(fields: [card_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  player_number player_number? @relation(fields: [player_num_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model player_number {
  id                 BigInt               @id @default(autoincrement())
  number             BigInt
  card_num_by_player card_num_by_player[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model user {
  id              BigInt       @id @default(autoincrement())
  created_at      DateTime     @default(now()) @db.Timestamptz(6)
  name            String
  last_connection DateTime?    @db.Timestamp(6)
  password        String
  email           String
  role            String
  user_badge      user_badge[]
  user_stat       user_stat[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model user_stat {
  id             BigInt   @id @default(autoincrement())
  created_at     DateTime @default(now()) @db.Timestamptz(6)
  user_id        BigInt?
  game_played    BigInt?
  num_win        BigInt?
  game_abandoned BigInt?
  user           user?    @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model feedback {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  email      String?
  message    String?
  type       String?
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model game_config {
  id    BigInt  @id @default(autoincrement())
  name  String?
  value BigInt?
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model game_rules {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  title      String?
  message    String?
  order      BigInt?
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model illustration {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  url        String?
  name       String?
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model badge {
  id          BigInt       @id @default(autoincrement())
  name        String?
  description String?
  user_badge  user_badge[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model user_badge {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  user_id    BigInt?
  badge_id   BigInt?
  badge      badge?   @relation(fields: [badge_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  user       user?    @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
